<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table class="table table-hover "> 
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Description</th>
      <th >Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.first_name %></td>
        <td><%= author.last_name %></td>
        <td><%= author.description %></td>
        <td>
          <%= link_to 'Add Blog', new_blog_path(author: author), class: "btn btn-success" %>
          <%= link_to 'Edit', edit_author_path(author), class: "btn btn-primary" %>
          <%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path, class: "btn btn-success" %>
