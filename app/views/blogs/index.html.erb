<p id="notice"><%= notice %></p>

<h1>Blogs</h1>
  <div class="row">
    <% @blogs.each do |author, blog| %>
      <div class="col-sm-4 mt-3">
        <h3><%= full_name(author) %></h3>
        <% blog.each do |blog|%>
          <div class="card mt-3">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.description %></p>
              <cite title=" Source Title" class="blockquote-footer mb-3"> <%= blog.created_at.strftime("%B %d, %Y")%></cite>
              <%= link_to 'Show', blog, class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-outline-danger btn-sm"%>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>

<br>

<%= link_to 'New Blog', authors_path, class: "btn btn-success" %>
