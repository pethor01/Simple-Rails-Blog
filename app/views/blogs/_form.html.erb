<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <% if !@author.nil? %>
      <%= form.hidden_field :author_id, value: @author.id %>
      <div class="form-group">
        <h3>Author: <%= @author.full_name %></h3>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control col-md-8"%>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control col-md-8", rows: "5" %>
    </div>

    <div class="actions">
      <%= form.submit "Create Blog", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
